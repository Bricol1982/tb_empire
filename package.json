{
  "name": "tb_empire",
  "version": "1.0.1",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder"
  },
  "build": {
    "appId": "com.bricol.tb-empire",
    "productName": "Carte TB Empire",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*"
    ],
    "extraResources": [
      "media/"
    ],
    "win": {
      "target": "portable",
      "icon": "media/soldat-400.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "media/soldat-400.icns"
    },
    "linux": {
      "target": "AppImage",
      "icon": "media/soldat-400.png"
    }
  },
  "devDependencies": {
    "electron": "^30.5.1",
    "electron-builder": "^26.0.12",
    "electron-packager": "^17.1.2"
  }
}
